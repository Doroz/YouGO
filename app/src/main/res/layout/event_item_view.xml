<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="2dp"
    android:clickable="true"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_event_title"
                tools:text="John Snow Big Party"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#171717"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_event_time"
                android:drawableLeft="@drawable/ic_time_item_view"
                android:drawableStart="@drawable/ic_time_item_view"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="#737373"
                tools:text="11:45 PM"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_event_title"
                android:layout_above="@+id/txt_event_address" />

            <TextView
                tools:text="245 miles"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_event_address"
                android:drawableStart="@drawable/ic_marker"
                android:drawableLeft="@drawable/ic_marker"
                style="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:textColor="#737373"
                tools:text="Winterfell Garden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_event_date"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txt_event_date"
                android:drawableStart="@drawable/ic_event_item_view"
                android:drawableLeft="@drawable/ic_event_item_view"
                style="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:textColor="#737373"
                tools:text="Jul 11, 2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_event_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>